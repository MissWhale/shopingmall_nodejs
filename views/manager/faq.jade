                                                        - var n = 1 //시작페이지
                                                        - var max=10 //끝페이지
                                                        - var next=11 //다음10페이지
                                                        - var check=1 //다음,마지막페이지 체크
                                                else
                                                        - var n=pno%10 ==0 ? (Math.trunc(pno/10)-1)*10+1 : Math.trunc(pno/10)*10+1 //시작페이지
